<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root alignment="TOP_RIGHT" fillHeight="false" stylesheets="@../css/dialog-box.css" type="javafx.scene.layout.HBox" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
  <children>
    <VBox fx:id="messageBox" fillWidth="true" maxWidth="Infinity" spacing="8">
      <children>
        <Label fx:id="mainLabel" wrapText="true" />
        <Label fx:id="specialLabel" wrapText="true" />
      </children>
    </VBox>

    <ImageView fx:id="displayPicture" fitHeight="99.0" fitWidth="99.0" pickOnBounds="true" preserveRatio="true">
      <HBox.margin>
        <Insets left="8.0" right="8.0" />
      </HBox.margin>
    </ImageView>
  </children>

  <padding>
    <Insets bottom="15.0" left="5.0" right="5.0" top="15.0" />
  </padding>
</fx:root>
